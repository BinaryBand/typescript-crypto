{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": "./src/",
    "outDir": "./lib/",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/__tests__/**/*.ts"],
  "exclude": ["node_modules"]
}
